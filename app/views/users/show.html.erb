<table class="profile" summary="Information profil">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.nom %>
      </h1>
    </td>
    <td class="sidebar round">
      <strong>Nom</strong> <%= @user.nom %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %>
    </td>
  </tr>  
</table>
<br/>
<br/>

<table class="donnees">
	<tr>
		<td class="donnee round">Poids actuel : <%= @user.poids %></td>
		<td class="donnee round">Poids idéal : <%= @user.poids_ideal %></td>
		<td class="donnee round">Age : <%= @user.age %></td>
		<td class="donnee round">Imc : <%= @user.calcul_imc %></td>
		<td class="donnee round">CV : <%= link_to 'lien vers le cv','/uploads/' + @user.id.to_s + '/cv.pdf'%> </td>
	</tr>
</table>

<%= form_tag({:action => 'uploadFile'}, :multipart => true) do %>
	<p><label for="upload_file">Sélectionnez votre CV</label> : 
	<%= file_field 'upload', 'datafile' %></p>
	<%= hidden_field 'id' , @user.id %>
	<%= submit_tag "Upload" %>
<% end %>
